<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="pidevelopers.floata"
    android:versionCode="4"
    android:versionName="3.1" >

    <uses-sdk
        android:minSdkVersion="9"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="pidevelopers.floata.MainActivity"
            android:label="@string/app_name"
             android:theme="@style/AppTheme"     >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="pidevelopers.floata.Floating"
            android:label="Floata"
            android:launchMode="singleTop"
            android:theme="@style/Theme.Transparent" >
        </activity>

        <service
            android:name="pidevelopers.floata.Chathead"
            android:enabled="true" />
        <service
            android:name="ServiceL"
            android:enabled="true" />

        <receiver android:name="pidevelopers.floata.Broadcast" >
            <intent-filter>
                <action android:name="android.intent.action" >
                </action>
            </intent-filter>
        </receiver>

        <activity
            android:name="pidevelopers.floata.Logintwitter"
            android:label="@string/title_activity_logintwitter" 
            android:theme="@android:style/Theme.NoTitleBar">
            <intent-filter>
                <data
                    android:host="floata"
                    android:scheme="connect" />
            </intent-filter>
        </activity>
        <activity
            android:name="pidevelopers.floata.Setting"
            android:label="Settings" 
            android:theme="@style/AppTheme">
        </activity>
        <activity
            android:name="pidevelopers.floata.Close"
            android:label="@string/title_activity_close" 
 android:theme="@style/AppTheme"           >
        </activity>
    </application>

</manifest>